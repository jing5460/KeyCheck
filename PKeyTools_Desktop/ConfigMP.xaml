<Window x:Class="PKeyTools.ConfigMP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKeyTools"
        mc:Ignorable="d"
        Title="证书管理" Height="800" Width="600" Loaded="Window_Loaded" Closing="Window_Closing">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <Button Name="AddCon" Height="30" Click="AddCon_Click">
                <Image Source="ICON\Add.png"/>
            </Button>
            <Button Name="RemoveCon" Height="30" Margin="20,0,0,0" Visibility="Collapsed" Click="RemoveCon_Click">
                <Image Source="ICON\Remove.png"/>
            </Button>
            <Button Name="EditCon" Height="30" Margin="20,0,0,0" Visibility="Collapsed" Click="EditCon_Click">
                <Image Source="ICON\Edit.png"/>
            </Button>
            <Button Name="UpCon" Height="30" Margin="20,0,0,0" Visibility="Collapsed" Click="UpCon_Click">
                <Image Source="ICON\Up.png"/>
            </Button>
            <Button Name="DownCon" Height="30" Margin="20,0,0,0" Visibility="Collapsed" Click="DownCon_Click">
                <Image Source="ICON\Down.png"/>
            </Button>
        </StackPanel>

        <Grid Margin="5,0,0,0">
            <TextBlock Text="名称"/>
            <TextBlock Text="路径" Margin="270,0,0,0"/>
        </Grid>
        <ScrollViewer>
            <ListView Name="PKList" SelectionChanged="PKList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ConfigName}" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding ConfigPath}" Grid.Column="1" Margin="20,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </StackPanel>
</Window>
