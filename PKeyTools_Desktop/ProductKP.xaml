<Window x:Class="PKeyTools.ProductKP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKeyTools"
        mc:Ignorable="d"
        Title="密钥管理" Height="550" Width="800" Loaded="Window_Loaded">

    <Window.Resources>
        <DataTemplate x:Key="KeySelectStyle">
            <Grid>
                <TextBlock Text="{Binding ShowName}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="100"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="输入搜索："/>
                <TextBox Name="SearchTb"  Grid.Column="1"/>
                <Button Name="SearchBtn" Content="搜索" Grid.Column="2" Click="SearchBtn_Click" Margin="10,0,0,0" />
            </Grid>
            <TextBlock Name="SearchResult"/>
            <ComboBox Name="KeySelectBox" ItemTemplate="{StaticResource KeySelectStyle}" SelectionChanged="KeySelectBox_SelectionChanged" Margin="0,10,0,0"/>
        </StackPanel>
        <ListView Name="KeyList" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding ProductKey}" />
                        <TextBlock Text="{Binding ActiveCount}" Grid.Column="1" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="2" Margin="20,0,0,0" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding ConfigID}" Grid.Column="3" Margin="20,0,0,0" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding EPID}" Grid.Column="4" Margin="20,0,0,0" TextWrapping="Wrap"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ContextMenu>
                <ContextMenu x:Name="KeyListMenu" Opened="KeyListMenu_Opened">
                    <MenuItem Name="CopyBtn" Header="复制" Click="CopyBtn_Click"/>
                    <MenuItem Name="DeleteBtn" Header="删除" Click="DeleteBtn_Click"/>
                    <MenuItem Name="CheckBtn" Header="重新检测" Click="CheckBtn_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Name="CheckBlock" Height="50" Visibility="Collapsed">
                <ToolTipService.ToolTip>
                    <ToolTip Background="LightBlue">
                        <TextBlock Text="已封密钥"/>
                    </ToolTip>
                </ToolTipService.ToolTip>
                <Image Source="ICON\Blocked.png"/>
            </Button>
            
        </StackPanel>
        <TextBlock Text="注意：暂未设置本地已封密钥数据库" Grid.Row="2" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
    </Grid>
</Window>
