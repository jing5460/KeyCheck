<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PKeyToolWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
<!--
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-select.css" />
-->
    <link href="/img/MainIcon.ico" rel="icon" />
</head>
<body>
    <header>
        <nav class="headerStyle navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container removeCMP">
                <img class="mainPageLogo" src="/img/Check1.png" onclick="location.href='/CK/KeyCheck';" />
                <h3 style="margin-left:20px;">PKeyTool</h3>

                <div style="margin:20px;display:block;" class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1" style="margin-top:-10px;">
                        <li class="nav-item" style="display:none;float:left;">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="KeyCheck">主页</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="ShareKeys">密钥共享</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="MSProduct">原版产品下载</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" href="https://visualsupport.microsoft.com/" target="_blank">自助获取CID</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="WebAPIPage">Web API</a>
                            </div>
                        </li>             
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="DataQuery">数据查询</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div>
                                <a class="nav-link transline" asp-area="" asp-controller="CK" asp-action="Privacy">关于PKeyTool</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="embedded">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="contentArea">
            &copy; 2019-2025 -- FC Dev Team -- <a asp-area="" asp-controller="CK" asp-action="Privacy">关于我们</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--
            <script src="~/lib/bootstrap/dist/js/bootstrap-select.js"></script>
    -->
    <!--
                <script type="text/javascript" src="~/js/firework.js"></script>
    -->
    @RenderSection("Scripts", required: false)
</body>
</html>

